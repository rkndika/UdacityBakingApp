<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/recipe_item_cardview"
    android:id="@+id/cv_recipe_item">

    <ImageView
        android:id="@+id/iv_recipe_item"
        android:layout_width="match_parent"
        android:layout_height="@dimen/recipe_item_image_height"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/rec_grey"/>

    <TextView
        android:id="@+id/tv_recipe_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:textSize="@dimen/recipe_item_title_size"
        android:layout_margin="@dimen/recipe_item_title_margin"
        android:textColor="@color/colorPrimary"/>

</android.support.v7.widget.CardView>